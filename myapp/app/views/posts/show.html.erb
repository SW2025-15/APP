<h1><%= @post.title %></h1>

<%# 画像の表示（Active Storage） %>
<% if @post.images.attached? %>
  <div class="post-images">
    <% @post.images.each do |image| %>
      <%# 画像サイズを調整して表示 %>
      <%= image_tag image, style: "max-width: 400px; display: block; margin-bottom: 10px;" %>
    <% end %>
  </div>
<% end %>

<p>内容: <%= @post.body %></p>
<p>投稿日: <%= @post.created_at.strftime("%Y年%m月%d日") %></p>

<%= button_to '編集する', edit_post_path(@post), method: :get, class: "edit-button" %>

<%= form_with(model: @post, method: :delete, data: { turbo_confirm: "本当に削除しますか？" }) do |form| %>
  <%= form.submit '投稿を削除する', class: "delete-button" %>
  <% end %>

<hr>
<%= link_to '一覧へ戻る', posts_path %>