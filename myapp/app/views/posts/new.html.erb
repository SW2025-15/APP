<h1>新規投稿</h1>

<%= form_with(model: @post, local: true) do |f| %>
  <%# エラーメッセージの表示 %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body, "内容　　" %>
    <%= f.text_area :body %>
  </div>
  
  <%# 複数画像アップロードフィールド %>
  <div>
    <%= f.label :images, "画像 (複数選択可)" %>
    <%= f.file_field :images, multiple: true %>
  </div>
  
  <%# status カラムは今回は省略（statusによって投稿の状態を変化させる） %>

  <div>
    <%= f.submit "投稿" %>
  </div>
<% end %>

<%= link_to 'トップページ', posts_path %>