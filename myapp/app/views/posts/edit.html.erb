<h1>編集画面</h1>

<%= form_with(model: @post) do |form| %>

  <div class="field">
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body, "本文" %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit "更新する" %>
  </div>

<% end %>

<hr>
